<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:lines="1"
        android:text="【存放方式】"
        android:textColor="@color/color282828"
        android:textSize="36dp"
        android:visibility="gone"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintEnd_toStartOf="@+id/layoutRight"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="144dp"
        android:background="@drawable/store_ebebeb"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信扫码"
            android:textSize="36sp"
            android:textColor="@color/color282828"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="46dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@color/colorAccent"
            android:scaleType="centerCrop"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutRight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintStart_toEndOf="@+id/layoutLeft"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="144dp"
        android:background="@drawable/store_ebebeb"
        android:orientation="vertical"
        app:layout_constraintDimensionRatio="1.2:1"
        >
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号验证"
            android:textSize="36sp"
            android:textColor="@color/color282828"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <EditText
            android:id="@+id/editTel"
            android:layout_width="0dp"
            android:layout_height="88dp"
            app:layout_constraintTop_toBottomOf="@+id/tv2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="39dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="45dp"
            android:textSize="28sp"
            android:textColor="@color/color282828"
            android:textColorHint="#999999"
            android:hint="请输入存放手机号"
            android:background="@drawable/store_ebebeb"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:inputType="phone"
            android:maxLength="11"

            />
        <LinearLayout
            android:id="@+id/layout2"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="88dp"
            app:layout_constraintTop_toBottomOf="@+id/editTel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="31dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="45dp"
            >

            <EditText
                android:id="@+id/editCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="28sp"
                android:textColor="@color/color282828"
                android:textColorHint="#999999"
                android:hint="请输入验证码"
                android:background="@drawable/store_ebebeb"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:inputType="numberSigned"
                />
            <Button
                android:id="@+id/btnCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="获取验证码"
                android:textColor="@color/colorWhite"
                android:textSize="28sp"
                android:background="@color/colorMaster"
                android:gravity="center_vertical"
                android:paddingStart="11dp"
                android:paddingEnd="12dp"
                android:minWidth="0dp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="88dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="85dp"
            android:layout_marginEnd="95dp"
            android:background="@color/colorMaster"
            android:text="下一步"
            android:textSize="28sp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="60dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>